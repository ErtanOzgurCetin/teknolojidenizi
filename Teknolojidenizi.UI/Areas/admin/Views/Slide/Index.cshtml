@model IQueryable<Slide>
<div class="right_col" role="main">
    <div class="">
     
       
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <p class="text-muted font-13 m-b-30">
                                       <h2>SLIDE TABLOSU</h2>
                                       <a asp-controller="Slide" asp-action="New" class="btn btn-danger float-right "> Yeni Slide </a>
                                    </p>
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Slogan</th>
                                                <th>Başlık</th>
                                                <th>Fiyat</th>
                                                <th>Link</th>
                                                <th>Görüntüleme Sırası</th>
                                                <th></th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach ( Slide s in Model)
                                            {
                                                <tr>
                                                    <td><a asp-controller="Slide" asp-action="Edit" asp-route-id="@s.ID">@s.Slogan</a></td>
                                                    <td>@s.Title</td>
                                                    <td>@s.Price</td>
                                                    <td>@s.Link</td>
                                                    <td>@s.DisplayIndex</td>
                                                    <td>
                                                        <span><a class="btn btn-warning" asp-controller="Slide" asp-action="Delete" asp-route-id="@s.ID">SİL</a></span>
                                                        <span><a class="btn btn-secondary" asp-controller="Slide" asp-action="Edit" asp-route-id="@s.ID">DÜZENLE</a></span>
                                                    </td>

                                                </tr>
                                            }
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

           
        </div>
    </div>
</div> 