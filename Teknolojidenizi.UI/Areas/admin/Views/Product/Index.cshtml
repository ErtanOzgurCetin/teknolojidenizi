@model IQueryable<Product>
<div class="right_col" role="main">
	<div class="">
		<div class="row">
			<div class="col-md-12 col-sm-12 ">
				<div class="x_panel">
					<div class="x_title">
						<h2>Ürün Yönetimi</h2>
						<a asp-controller="Product" asp-action="New" class="btn btn-danger float-right">Yeni Ürün</a>
						<div class="clearfix"></div>
					</div>
					<div class="x_content">
						<div class="row">
							<div class="col-sm-12">
								<div class="card-box table-responsive">

									<table id="datatable" class="table table-striped table-bordered" style="width:100%">
										<thead>
											<tr>
												<th>Ürün Adı</th>
												<th>Ürün Fiyatı</th>
												<th>Stok Miktarı</th>
												<th>Görüntüleme Sırası</th>
												<th>Ürün Resimleri</th>


											</tr>
										</thead>
										<tbody>
											@foreach (Product p in Model)
											{
												<tr>
													<td><a asp-controller="Product" asp-action="Edit" asp-route-id="@p.ID">@p.Name</a></td>
													<td>@p.Price</td>
													<td>@p.Stock</td>
													<td>@p.DisplayIndex</td>
													<td><a asp-controller="ProductPicture" asp-action="Index" asp-route-productid="@p.ID">Ürüne Ait Resimler</a></td>
													<td><a class="btn btn-warning" asp-controller="Product" asp-action="Delete" asp-route-id="@p.ID">SİL</a></td>
												</tr>
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>