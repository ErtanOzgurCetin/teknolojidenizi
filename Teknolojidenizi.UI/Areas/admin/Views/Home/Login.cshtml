@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Gentelella Alela! | </title>

    <!-- Bootstrap -->
    <link href="/admin/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/admin/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/admin/nprogress/nprogress.css" rel="stylesheet">
    <link href="/admin/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="/admin/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="/admin/login" method="post">
                        <h1>Login Form</h1>
                        <div>
                            <input type="text" name="username" class="form-control" placeholder="Kullanıcı Adı" />
                        </div>
                        <div>
                            <input type="password" name="password" class="form-control" placeholder="Parola" />
                        </div>
                        <div>
                            <button class="btn btn-default submit" type="submit">Giriş Yap</button>
                            <a class="reset_pass" href="#">Lost your password?</a>
                        </div>
                        <span style="color:red">@TempData["bilgi"]</span>
                        @Html.AntiForgeryToken()
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
</html>

