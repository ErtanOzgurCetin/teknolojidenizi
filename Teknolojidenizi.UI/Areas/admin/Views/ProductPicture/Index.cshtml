@model IQueryable<ProductPicture>
<div class="right_col" role="main">
	<div class="">
		<div class="row">
			<div class="col-md-12 col-sm-12 ">
				<div class="x_panel">
					<div class="x_title">
						<h2>Ürün Resim Yönetimi</h2>
						<a asp-controller="ProductPicture" asp-action="New" asp-route-productid="@ViewBag.ProductID" class="btn btn-danger float-right">Yeni Ürün Resmi</a>
						<div class="clearfix"></div>
					</div>
					<div class="x_content">
						<div class="row">
							<div class="col-sm-12">
								<div class="card-box table-responsive">

									<table id="datatable" class="table table-striped table-bordered" style="width:100%">
										<thead>
											<tr>
												<th>Ürün Resim Adı</th>
												<th>Sıra</th>
												<th></th>
											</tr>
										</thead>
										<tbody>
											@foreach (ProductPicture s in Model)
											{
												<tr>
													<td><a asp-controller="ProductPicture" asp-action="Edit" asp-route-id="@s.ID">@s.Name</a></td>
													<td>@s.DisplayIndex</td>
													<td><a class="btn btn-warning" asp-controller="ProductPicture" asp-action="Delete" asp-route-id="@s.ID">SİL</a></td>
												</tr>
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>