@model List<Cart>

<!-- Page info -->

<div class="page-top-info">
	<div class="container">
		<h4>SEPETİM</h4>
		<div class="site-pagination">
			<a href="/">Ana Sayfa</a> /
			<a href="">Sepetim</a>
		</div>
	</div>
</div>
<!-- Page info end -->
<!-- cart section end -->
<section class="cart-section spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				<div class="cart-table">
					<h3>Sepetim</h3>
					<div class="cart-table-warp">
						<table>
							<thead>
								<tr>
									<th class="product-th">Ürün</th>
									<th class="quy-th">Miktar</th>
									<th class="total-th">Fiyat</th>
								</tr>
							</thead>
							<tbody>
								@foreach (Cart c in Model)
								{
									<tr>
										<td class="product-col">
											<img src="@c.ProductPicture" alt="">
											<div class="pc-title">
												<h4>@c.ProductName</h4>
												<p>@String.Format("{0:N}", c.ProductPrice) TL</p>
											</div>
										</td>
										<td class="quy-col">
											<div class="quantity">
												<div class="pro-qty">
													<input type="text" value="@c.Quantity"> 
													
												</div>
											</div>
										</td>
										<td class="total-col"><h4>@String.Format("{0:N}", c.ProductPrice * c.Quantity)</h4></td>

									</tr>

								}
							</tbody>
						</table>
					</div>
					<div class="total-cost">
						<h6>Toplam Tutar <span>@String.Format("{0:N}",Model.Sum(x=> x.Quantity*x.ProductPrice)) TL</span></h6>
					</div>
				</div>
			</div>
			<div class="col-lg-4 card-right">
				
				<a asp-controller="Cart" asp-action="CheckOut" class="site-btn">Alışverişe Devam Et <i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
				<a href="/" class="site-btn sb-dark">Markete Dön <i class="fa fa-undo" aria-hidden="true"></i></a>
				
			</div>
		</div>
	</div>
</section>

@* <!-- cart section end -->
